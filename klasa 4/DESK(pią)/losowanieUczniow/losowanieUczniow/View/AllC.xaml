<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="losowanieUczniow.View.AllC"
             Title="AllC">

    <VerticalStackLayout>
        <CollectionView x:Name="wszystkieKlasy"
                    ItemsSource="{Binding klasy}"
                    SelectionMode="Single"
                    SelectionChanged="WyborKlasy">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding nazwaklasy}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>


            <CollectionView.Footer>
                <Label Text="Nowa klasa: " />
                <Editor Placeholder="nazwa klasy" WidthRequest="250" Text="{Binding nazwaklasy}" />
                <Button Text="Dodaj" Clicked="NewClass_Clicked" />
            </CollectionView.Footer>

        </CollectionView>
        
    </VerticalStackLayout>

                    
</ContentPage>