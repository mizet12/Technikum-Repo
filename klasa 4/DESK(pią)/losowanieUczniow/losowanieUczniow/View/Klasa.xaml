<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="losowanieUczniow.View.Klasa"
             Title="Klasa">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Editor Text="{Binding Name}" Placeholder="Podaj imie ucznia" />
            <Editor Text="{Binding Surname}" Placeholder="Podaj nazwisko ucznia" />
            <Button Text="Dodaj ucznia" />

            <CollectionView
                x:Name="kolekcjaUczniow"
                ItemsSource="{Binding klasy}"
                ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout>
                            <Label Text="{Binding numer, StringFormat='{0}.'}" FontSize="Large" />
                            <Label Text="{Binding Name}" FontSize="Large" />
                            <Label Text="{Binding Surname}" FontSize="Large" />
                            <Button Text="Usun" Clicked="DeletePerson_Clicked" BindingContext="{Binding .}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>