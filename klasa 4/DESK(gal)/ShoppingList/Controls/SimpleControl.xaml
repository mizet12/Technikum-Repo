<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Controls.SimpleControl"
             x:Name="this">
    <Frame BindingContext="{x:Reference this}">
        <Grid>
            <Label Text="{Binding SongTitle, FallbackValue='Song Title'}" TextColor="White" />
            <Label Text="{Binding SongAuthor, FallbackValue='Song Author'}" TextColor="White" />
        </Grid>        
    </Frame>
</ContentView>