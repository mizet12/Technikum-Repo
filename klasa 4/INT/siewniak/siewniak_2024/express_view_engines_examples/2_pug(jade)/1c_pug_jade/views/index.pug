                const jelcz317DMoc = 240;
                const jelcz317DMoment = 883;
                console.log("Dane Jelcza 317D:");
                console.log("moc = ", jelcz317DMoc, "KM");
                console.log("moment obrotowy = ", jelcz317DMoment, "Nm");

                const span = document.getElementById("span");
                span.innerHTML = "Dane Jelcza 317D (z turbospężarką): moc = "
                    + jelcz317DMoc
                    + "KM, moment obrotowy = "
                    + jelcz317DMoment
                    + "Nm";
